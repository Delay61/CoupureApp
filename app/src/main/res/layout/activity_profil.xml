<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView android:id="@+id/textUID" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ID utilisateur :" android:textStyle="bold" android:paddingBottom="8dp" />
        <TextView android:id="@+id/textNom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nom :" android:paddingBottom="4dp" />
        <TextView android:id="@+id/textPrenom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Prénom :" android:paddingBottom="4dp" />
        <TextView android:id="@+id/textZone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Zone :" android:paddingBottom="4dp" />
        <TextView android:id="@+id/textTelephone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Téléphone :" android:paddingBottom="4dp" />
        <TextView android:id="@+id/textEmail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Email :" android:paddingBottom="16dp" />

        <Button android:id="@+id/btnModifier" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Modifier le profil" />
        <Button android:id="@+id/btnChangerMdp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Changer le mot de passe" android:layout_marginTop="8dp" />
        <Button android:id="@+id/btnSupprimer" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Supprimer le compte" android:layout_marginTop="8dp" />
        <Button android:id="@+id/btnAccueil" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Retour à l'accueil" android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
