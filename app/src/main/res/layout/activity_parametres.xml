<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Langue"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerLangue"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp" />

        <TextView
            android:text="Activer les notifications"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switchNotifications"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="12dp" />

        <TextView
            android:text="Zone par défaut"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editZone"
            android:hint="Ex: Bujumbura"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp" />

        <TextView
            android:text="Thème"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switchTheme"
            android:text="Mode sombre"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnSauvegarder"
            android:text="Sauvegarder"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnRetourMainActivity"
            android:text="Retour à l'Accueil"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
